# Colorize basic ls
export LSCOLORS='BxBxhxDxfxhxhxhxhxcxcx'
alias ls="ls -G"

# Preferred listing
alias l="ls -lha -G"

# List files in colorized long format with human readable sizes
alias ll="ls -lh -G"

# List only hidden files in colorized short format
alias la="ls -d -G .?*"

# List only hidden files in colorized long format
alias lla="ls -lhd -G .?*"

# Always use neovim as editor
alias v="nvim"
alias vi="nvim"
alias vim="nvim"
alias neovim="nvim"

# Copy SSH public key to clipboard
alias copy_pubkey="pbcopy < ~/.ssh/id_rsa.pub"

# Recursively delete `.DS_Store` files
alias cleands="find . -type f -name '*.DS_Store' -ls -delete"

# Delete `*~` files in current directory
alias cleanbak="find . -type f -name '*~' -maxdepth 1 -ls -delete"

# git
alias gs="git status"
alias gl="git log --all --decorate --oneline --graph"

# YOUR DICTIONARY
alias yd="cd /git/yourdictionary/"
alias wf="cd /git/WordFinder/"
alias clear_cache="find /git/yourdictionary/app/cache -name \"*.html\" -type f -delete"
alias list_cache="find /git/yourdictionary/app/cache -name \"*.html\" -type f"

alias ssh_dev="ssh -i ~/.ssh/YourDictionary.pem ec2-user@yd_dev"
alias ssh_test="ssh -i ~/.ssh/YourDictionary.pem ec2-user@yd_test"
alias ssh_prod1="ssh -i ~/.ssh/YourDictionary.pem ec2-user@yd_prod"
alias ssh_prod2="ssh -i ~/.ssh/YourDictionary.pem ec2-user@yd_prod_b"
alias ssh_prod3="ssh -i ~/.ssh/YourDictionary.pem ec2-user@yd_prod_c"
alias ssh_wf="ssh -i ~/.ssh/YourDictionary.pem ec2-user@yd_wf"
