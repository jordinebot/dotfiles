#Â Colorize basic ls
export LSCOLORS='BxBxhxDxfxhxhxhxhxcxcx'
alias ls="ls -G"

# Preferred listing
alias l="ls -lha -G"

# List files in colorized long format with human readable sizes
alias ll="ls -lh -G"

# List only hidden files in colorized short format
alias la="ls -d -G .?*"

# List only hidden files in colorized long format
alias lla="ls -lhd -G .?*"

# Always use neovim as editor
alias v="nvim"
alias vi="nvim"
alias vim="nvim"
alias neovim="nvim"

# Copy SSH public key to clipboard
alias copy_pubkey="pbcopy < ~/.ssh/id_rsa.pub"

# Recursively delete `.DS_Store` files
alias cleands="find . -type f -name '*.DS_Store' -ls -delete"

# Delete `*~` files in current directory
alias cleanbak="find . -type f -name '*~' -maxdepth 1 -ls -delete"

# git
alias gf="cd /git"

# Fuck
alias f="fuck"
alias fy="fuck --yeah"

# Fast edit /etc/hosts
alias eh="sudo nvim /etc/hosts"

# LOVETOKNOW ALIASES
alias yd="cd /git/yourdictionary/"
alias wf="cd /git/wordfinder/"
